@model Vaccine

@{
	ViewData["Title"] = "Edit Vaccine";
}

<div class="text-center">
	<div>
		<a asp-controller="VaccineManagement" asp-action="DisplayVaccines">Display All Vaccines</a>
	</div>

	<br>

	<form method="post">
		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label">Name&colon; </label>
			<div class="col-sm-8">
				<input asp-for="Name" class="form-control" value="@Model.Name" required>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="DosesRequired" class="col-sm-2 col-form-label">Doses Required&colon; </label>
			<div class="col-sm-8">
				<select asp-for="DosesRequired" class="form-control">
					@for(int i = 1; i <= 2; i++)
					{
						@if(i == @Model.DosesRequired)
						{
							<option selected>@i</option>
						}
						else
						{
							<option>@i</option>
						}
					}
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="DaysBetween" class="col-sm-2 col-form-label">Days Between Doses&colon; </label>
			<div class="col-sm-8">
				<input asp-for="DaysBetween" class="form-control" value="@Model.DaysBetween" required>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Edit</button>
	</form>
</div>