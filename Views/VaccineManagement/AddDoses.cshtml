@{
	ViewData["Title"] = "Add Doses";
}

<div class="text-center">
	<div>
		<a asp-controller="VaccineManagement" asp-action="DisplayVaccines">Display All Vaccines</a>
	</div>

	<br>

	<form method="post">
		<div class="form-group row">
			<label for="name" class="col-sm-2 col-form-label">Name&colon; </label>
			<div class="col-sm-8">
				<select class="form-control" id="name" name="id">
					@foreach(var vaccine in ViewBag.Vaccines)
					{
						<option value="@vaccine.Id">@vaccine.Name</option>
					}
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label for="newDoses" class="col-sm-2 col-form-label">New Doses Received&colon; </label>
			<div class="col-sm-8">
				<input type="number" class="form-control" id="newDoses" name="newDoses" required>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Add</button>
	</form>
</div>