@model Vaccine

@{
	ViewData["Title"] = "Add Vaccine";
}

<div class="text-center">
	<div>
		<a asp-controller="VaccineManagement" asp-action="DisplayVaccines">Display All Vaccines</a>
	</div>

	<br>

	<form method="post">
		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label">Name&colon; </label>
			<div class="col-sm-8">
				<input asp-for="Name" class="form-control" required/>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="DosesRequired" class="col-sm-2 col-form-label">Doses Required&colon; </label>
			<div class="col-sm-8">
				<select asp-for="DosesRequired" class="form-control">
					<option>1</option>
					<option>2</option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="DaysBetween" class="col-sm-2 col-form-label">Days Between Doses&colon; </label>
			<div class="col-sm-8">
				<input asp-for="DaysBetween" class="form-control" required/>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Add</button>
	</form>
</div>