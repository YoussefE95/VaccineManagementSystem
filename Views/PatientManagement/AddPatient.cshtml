@{
	ViewData["Title"] = "Add Patient";
}

<div class="text-center">
	<div>
		<a asp-controller="PatientManagement" asp-action="DisplayPatients">Display All Patients</a>
	</div>

	<br>

	<form asp-controller="PatientManagement" asp-action="AddPatient" method="post">
		<div class="form-group row">
			<label for="Name" class="col-sm-2 col-form-label">Patient&colon; </label>
			<div class="col-sm-8">
				<input class="form-control" id="Name" name="Name" required/>
			</div>
		</div>
		<div class="form-group row">
			<label for="VaccineId" class="col-sm-2 col-form-label">Vaccine&colon; </label>
			<div class="col-sm-8">
				<select class="form-control" id="VaccineId" name="VaccineId">
					@foreach(var Vaccine in ViewBag.Vaccines)
					{
						if(Vaccine.TotalDosesLeft != 0)
						{
							<option value="@Vaccine.Id">@Vaccine.Name</option>
						}
					}
				</select>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Add</button>
	</form>
</div>